<%# メッセージ詳細ページ %>

<h1>
  id: <%= @message.id %> の詳細ページ
</h1>

<p>タイトル：
  <%= @message.title %>
</p>

<p>メッセージ：
  <%= @message.content %>
</p>

<%= link_to '一覧に戻る', root_path %>

<%= link_to 'このメッセージを編集する', edit_message_path(@message) %>

<%= link_to 'このメッセージを削除する', @message, method: :delete, data: {confirm: "本当に削除しますか？"} %>
